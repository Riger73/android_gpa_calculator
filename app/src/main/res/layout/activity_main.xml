<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <Button
        android:id="@+id/addGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Grade"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="89dp" />

    <EditText
        android:id="@+id/editGrade"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:editable="true"
        android:ems="10"
        android:hint="Add Grade: HD, D, C, P or N"
        android:inputType="text|textCapWords|textShortMessage"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="91dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="243dp"
        android:layout_height="134dp"
        android:contentDescription="Current Grade Tally"
        android:editable="false"
        android:ems="10"
        android:hint="Current Grade Tally Display"
        android:inputType="textPersonName"
        android:visibility="visible"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="157dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:hint="Result"
        android:inputType="text"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="320dp" />

</android.support.constraint.ConstraintLayout>